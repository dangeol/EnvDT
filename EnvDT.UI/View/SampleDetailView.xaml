<UserControl x:Class="EnvDT.UI.View.SampleDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:EnvDT.UI.View"
             xmlns:viewModel="clr-namespace:EnvDT.UI.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition />
    </Grid.RowDefinitions>

    <DataGrid ItemsSource="{Binding Samples}"
              AutoGenerateColumns="False" RowHeaderWidth="0" Margin="10">
      <DataGrid.Columns>
        <DataGridCheckBoxColumn Header="Selected" Width="20"
             Binding="{Binding IsSelected}"/>
        <DataGridTextColumn Header="Sample Name" Width="*" IsReadOnly="True"
             Binding="{Binding SampleName}"/>
      </DataGrid.Columns>
    </DataGrid>

    <StackPanel Grid.Row="1" Orientation="Vertical">
      <Button Content="Eval" Margin="10"
              Command="{Binding EvalLabReportCommand}"/>
    </StackPanel>

    <DataGrid Grid.Row="2" ItemsSource="{Binding EvalResults}"
              AutoGenerateColumns="False" RowHeaderWidth="0" Margin="10">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Sample Name" IsReadOnly="True"
             Binding="{Binding SampleName}"/>
        <DataGridTextColumn Header="Valualtion Class" IsReadOnly="True"
             Binding="{Binding HighestValClassName}"/>
        <DataGridTextColumn Header="Exceeding Parameters" Width="*" IsReadOnly="True"
             Binding="{Binding ExceedingValueList}"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
